	.byte	AC_WALK_U_1		//
	.byte	AC_WALK_U_1		//
	.byte	AC_WALK_U_1		//
	.byte	AC_WALK_U_1		//
	.byte	AC_WALK_U_1		//
	.byte	AC_WAIT_8		//
	.byte	ACMD_END

