	.byte	AC_WALK_U_1		//
	.byte	AC_WALK_U_1		//
	.byte	AC_WALK_U_1		//
	.byte	AC_WALK_R_1		//
	.byte	AC_WALK_U_1		//
	.byte	AC_WALK_U_1		//
