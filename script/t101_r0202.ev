/********************************************************************/
/*						サポートキャラ								*/
/********************************************************************/
SCRIPT_LABEL	ev_support_01_p01_t101_r0202
	_TALK_START

	//ミナモのサポートイベント終了していたら
	_IF_FLAGON_JUMP	FE_SUPPORT_02_FIELD_C106,ev_support_01_p02_t101_r0202

	_GET_MY_SEX
	_IFVAL_CALL		ANSWORK,EQ,FALSE,my_sex_boy_01_t101_r0202
	_IFVAL_CALL		ANSWORK,EQ,TRUE,my_sex_girl_01_t101_r0202

	_SE				SE_KAIDAN
	_OBJ_DELETE		TARGET_OBJ

	//会話した
	_LDVAL			WK_SCENE_T101_R0202,3

	//ミシロのストッパー解除する
	_LDVAL			WK_SCENE_FIELD_T101,1

	_BGM_SPECIAL_CLR
	_BGM_NOW_SET

	_TALK_END
	_END

//--------------------------------------------------------------------
//主人公男
//--------------------------------------------------------------------
my_sex_boy_01_t101_r0202:
	_TALK_KEYWAIT	msg_heroine_01_p01_t101_r0202

	//セーブ後も流すようにする
	_BGM_SET		MUS_GIRL_SUP,1		

	//主人公の方を向く
	_SET_OBJ_ANIME	TARGET_OBJ,turn_hero_site_anime
	_OBJ_ANIME_WAIT

	_SET_OBJ_ANIME	TARGET_OBJ,gyoe_mark_anime
	_OBJ_ANIME_WAIT

	_SET_OBJ_ANIME	TARGET_OBJ,gyoe_mark_wait_anime
	_OBJ_ANIME_WAIT

	_TALK_KEYWAIT	msg_heroine_01_p02_t101_r0202
	_TALK_CLOSE

	//出かける
	_IFVAL_CALL		RG_SITE,EQ,SITE_R,case_r_support_t101_r0202
	_IFVAL_CALL		RG_SITE,EQ,SITE_U,case_u_support_t101_r0202
	_IFVAL_CALL		RG_SITE,EQ,SITE_L,case_l_support_t101_r0202
	_RET

//出かける
case_r_support_t101_r0202:
	_SET_OBJ_ANIME	TARGET_OBJ,support_01_t101_r0202_anime01
	_OBJ_ANIME_WAIT
	_RET

case_u_support_t101_r0202:
	_SET_OBJ_ANIME	TARGET_OBJ,support_01_t101_r0202_anime02
	_OBJ_ANIME_WAIT
	_RET

case_l_support_t101_r0202:
	_SET_OBJ_ANIME	TARGET_OBJ,support_01_t101_r0202_anime02
	_OBJ_ANIME_WAIT
	_RET

//--------------------------------------------------------------------
//主人公女
//--------------------------------------------------------------------
my_sex_girl_01_t101_r0202:
	_TALK_KEYWAIT	msg_hero_01_p01_t101_r0202

	//セーブ後も流すようにする
	_BGM_SET		MUS_BOY_SUP,1		

	//主人公の方を向く
	_SET_OBJ_ANIME	TARGET_OBJ,turn_hero_site_anime
	_OBJ_ANIME_WAIT

	_SET_OBJ_ANIME	TARGET_OBJ,gyoe_mark_anime
	_OBJ_ANIME_WAIT

	_SET_OBJ_ANIME	TARGET_OBJ,gyoe_mark_wait_anime
	_OBJ_ANIME_WAIT

	_TALK_KEYWAIT	msg_hero_01_p02_t101_r0202
	_TALK_CLOSE

	//出かける
	_IFVAL_CALL		RG_SITE,EQ,SITE_R,case_r_support_02_t101_r0202
	_IFVAL_CALL		RG_SITE,EQ,SITE_U,case_u_support_02_t101_r0202
	_IFVAL_CALL		RG_SITE,EQ,SITE_L,case_l_support_02_t101_r0202
	_RET

//出かける
case_r_support_02_t101_r0202:
case_u_support_02_t101_r0202:
	_SET_OBJ_ANIME	TARGET_OBJ,support_01_t101_r0202_anime04
	_OBJ_ANIME_WAIT
	_RET

case_l_support_02_t101_r0202:
	_SET_OBJ_ANIME	TARGET_OBJ,support_01_t101_r0202_anime03
	_OBJ_ANIME_WAIT
	_RET

//--------------------------------------------------------------------
//			ミナモのサポートイベント終了している
//--------------------------------------------------------------------
ev_support_01_p02_t101_r0202:
	//主人公の方を向く
	_SET_OBJ_ANIME	TARGET_OBJ,turn_hero_site_anime
	_OBJ_ANIME_WAIT

	_GET_MY_SEX
	_IFVAL_CALL		ANSWORK,EQ,FALSE,my_sex_boy_02_t101_r0202
