//--------------------------------------------------------------------
//						FLAG_CHANGE_LABEL
//--------------------------------------------------------------------
flag_change_t101_r0202:
	//ロード１０３でサポートに勝利するまで位置を移動する
	_IF_FLAGOFF_CALL	FE_SUPPORT_01_FIELD_R103,support_move_p01_t101_r0202

	//オープニングで初めて２階にきたら、シーンを５にする
	_IFVAL_CALL		WK_SCENE_SP_OPENING,EQ,4,opening_first_zitaku_2kai

	//模様替えグッズを非表示
	_CALL			base_in_obj_goods_all_reset

	_LDVAL			WK_SCENE_BASE_GOODS, 0
	_END

//--------------------------------------------------------------------
//		ロード１０３でサポートに勝利するまで位置を移動する
//--------------------------------------------------------------------
support_move_p01_t101_r0202:
	_SXY_POS_CHANGE		SUPPORTW_01_T101_R0202,7,2
	_SXY_SITE_CHANGE	SUPPORTW_01_T101_R0202,MV_UP
	_RET
	
//--------------------------------------------------------------------
//						OBJ_CTRL_LABEL
//--------------------------------------------------------------------
//グッズを配置
obj_ctrl_t101_r0202:
	OBJ_CTRL_DATA	WK_SCENE_BASE_GOODS, 0, obj_goods_set_t101_r0202	// 2002/08/03 by nakahiro
	OBJ_CTRL_END

// 2002/08/03 by nakahiro
obj_goods_set_t101_r0202:
	_GET_MY_SEX
	_IFVAL_JUMP	ANSWORK, EQ, 1, base_in_obj_goods_init
	_END


