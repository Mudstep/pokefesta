change_camera_obj:
	//ループ用クリア
	_TR_FLAG_RESET	INTERVIEWER_06

	_FUNC_CALL		ANSWORK,GET_CAMERA_VS
	_SWITCH			ANSWORK
	_CASEJUMP		0,case0_camera_obj
	_CASEJUMP		1,case1_camera_obj
	_CASEJUMP		2,case2_camera_obj
	_CASEJUMP		3,case3_camera_obj
	_CASEJUMP		4,case4_camera_obj
	_CASEJUMP		5,case5_camera_obj
	_CASEJUMP		6,case6_camera_obj
	_CASEJUMP		7,case7_camera_obj
	_CASEJUMP		8,case8_camera_obj
	_END

//r111	(0回)
case0_camera_obj:
	_CALL		flag_reset_camera_01
	_RET

//r118	(1回)
case1_camera_obj:
	_CALL		flag_reset_camera_02
	_CALL		flag_set_camera_01
	_RET

//r120	(2回)
case2_camera_obj:
