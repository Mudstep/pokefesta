/********************************************************************/
//							ポケモン	
/********************************************************************/
SCRIPT_LABEL	ev_poke_01_p01_cave_d0401
	_TALK_OBJ_START
	
	_VOICE_PLAY		MONSNO_REZIROKKU,2
	_TIME_WAIT		40
	_VOICE_WAIT

	_WILD_FIGHT_SET	MONSNO_REZIROKKU,40,0

	//通常戦なので負けてもOBJが消えているようにする
	_FLAG_SET		FV_POKE_01_CAVE_D0401
	_FLAG_SET		SYS_CTRL_OBJ_DELETE
	_PROGRAM		TENJI_POKE_FIGHT
	_STOP_SCRIPT
	_FLAG_RESET		SYS_CTRL_OBJ_DELETE

	_TALK_OBJ_END
	_END

