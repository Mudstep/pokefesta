//--------------------------------------------------------------------
//						INIT_CTRL_LABEL
//--------------------------------------------------------------------
init_ctrl_cave_d0401:
	_IF_FLAGON_CALL	SYS_CTRL_OBJ_DELETE,pokemon_del_cave_d0401
	_END

pokemon_del_cave_d0401:
	_OBJ_DELETE		TARGET_OBJ
	_RET

//--------------------------------------------------------------------
//						BG_CHANGE_LABEL
//--------------------------------------------------------------------
bg_change_cave_d0401:
	//壁を通れなくする
	_IF_FLAGOFF_CALL	SYS_TENJI_KAIRIKI,bg_chg_01_cave_d0401
	_END

bg_chg_01_cave_d0401:
	_SET_CELL		7,19,553,1
	_SET_CELL		8,19,553,1
	_SET_CELL		9,19,553,1
	_SET_CELL		7,20,565,1
	_SET_CELL		8,20,565,1
	_SET_CELL		9,20,565,1
	_RET

//--------------------------------------------------------------------
//						FLAG_CHANGE_LABEL
//--------------------------------------------------------------------
flag_change_cave_d0401:
	_FLAG_SET			SYS_ARRIVE_ISEKI
	_END


