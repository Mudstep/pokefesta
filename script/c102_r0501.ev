	_EASY_OBJ_MSG	msg_workerw2_01_p02_c102_r0501
	_END


/********************************************************************/
/*							受付嬢(POS)								*/
/********************************************************************/
SCRIPT_LABEL	ev_c102_r0501_pos01
	_TALK_START

	//左を向く
	_SET_OBJ_ANIME	EV_OBJ_SPID,turn_l_anime
	_OBJ_ANIME_WAIT				//アニメ終了待ち

	_JUMP			ev_workerw2_01_common
	_END

SCRIPT_LABEL	ev_c102_r0501_pos02
	_TALK_START

	//左を向く
	_SET_OBJ_ANIME	EV_OBJ_SPID,turn_r_anime
	_OBJ_ANIME_WAIT				//アニメ終了待ち

	_JUMP			ev_workerw2_01_common
	_END

//共通処理
ev_workerw2_01_common:
	_GOLD_WIN_WRITE	0,0,0		//手持ち

	_TALK_YES_NO	msg_workerw2_01_p01_c102_r0501
	_IFVAL_JUMP		ANSWORK,EQ,TRUE,yes_workerw2_01_p01_c102_R0501

	_TALK_CLOSE
	_GOLD_WIN_DEL	0,0

	//一歩押し戻される
	_SET_OBJ_ANIME	EV_OBJ_SPID,hero_01_c102_r0501_anime01
	_OBJ_ANIME_WAIT				//アニメ終了待ち

	_TALK_END
	_END

//「はい」
yes_workerw2_01_p01_c102_R0501:
	_COMP_GOLD		50
	_IFVAL_JUMP		ANSWORK,EQ,FALSE,gold_nothing_hakubutu_uketuke_01

	_SUB_GOLD		50
	_GOLD_WRITE		0,0,0

	_TALK_KEYWAIT	msg_workerw2_01_p02_c102_r0501

	_LDVAL			WK_SCENE_C102_R0501,1
	_GOLD_WIN_DEL	0,0
	_TALK_END
	_END

//お金がない
gold_nothing_hakubutu_uketuke_01:
	//「デボンのにもつ」を届ける前なら
	_IF_FLAGOFF_JUMP	FE_AQUA_01_C102_R0502,before_debonnonimotu_hakubutu_uketuke_01

	_TALK_KEYWAIT	msg_workerw2_01_p03_c102_r0501

	_TALK_CLOSE
	_GOLD_WIN_DEL	0,0

	//一歩押し戻される
	_SET_OBJ_ANIME	EV_OBJ_SPID,hero_01_c102_r0501_anime01
	_OBJ_ANIME_WAIT				//アニメ終了待ち

	_TALK_END
	_END

//「デボンのにもつ」を届ける前なら
before_debonnonimotu_hakubutu_uketuke_01:
	_TALK_KEYWAIT	msg_workerw2_01_p05_c102_r0501
	_LDVAL			WK_SCENE_C102_R0501,1
	_GOLD_WIN_DEL	0,0
	_TALK_END
	_END

//--------------------------------------------------------------------
//主人公	一歩押し戻される
//--------------------------------------------------------------------
hero_01_c102_r0501_anime01:
	.byte	AC_WALK_D_1	//下に１歩
	.byte	ACMD_END


