/*								アクア団							*/
/********************************************************************/
SCRIPT_LABEL	ev_evilm1_06_p01_c102_r0501
	_TALK_OBJ_START

	_TIME_WAIT		8

	_SE				SE_GYOE_MARK
	_SET_OBJ_ANIME	EVILM1_06_C102_R0501,gyoe_mark_anime
	_OBJ_ANIME_WAIT				//アニメ終了待ち

	//間をあける
	_SET_OBJ_ANIME	EVILM1_06_C102_R0501,gyoe_mark_wait_anime
	_OBJ_ANIME_WAIT				//アニメ終了待ち

	_TALK_KEYWAIT	msg_evilm1_06_p01_c102_r0501

	_ITEM_EVENT		ITEM_WAZAMASIN46,1
	_IF_ZERO_JUMP	item_full_evilm1_06_c102_r0501

	_FLAG_SET		FE_WAZAM46_GET					

	_TALK_KEYWAIT	msg_evilm1_06_p02_c102_r0501
	_TALK_CLOSE

	_IFVAL_JUMP		RG_SITE,EQ,SITE_U,site_u_evilm1_06_c102_r0501_anime01
	_IFVAL_JUMP		RG_SITE,NE,SITE_U,site_etc_evilm1_06_c102_r0501_anime01
	_END

//主人公が下から話しかけたとき
site_u_evilm1_06_c102_r0501_anime01:
	_SET_OBJ_ANIME	EVILM1_06_C102_R0501,nigeru_c102_r0501_anime02
	_OBJ_ANIME_WAIT				//アニメ終了待ち

	//退場したので消す
	_FLAG_SET		FV_EVILM1_06_C102_R0501
	_SE				SE_KAIDAN
	_OBJ_DELETE		EVILM1_06_C102_R0501
	_TALK_OBJ_END
	_END

//主人公が下以外から話しかけたとき
site_etc_evilm1_06_c102_r0501_anime01:
	_SET_OBJ_ANIME	EVILM1_06_C102_R0501,nigeru_c102_r0501_anime01
	_OBJ_ANIME_WAIT				//アニメ終了待ち

	//退場したので消す
	_FLAG_SET		FV_EVILM1_06_C102_R0501
	_SE				SE_KAIDAN
	_OBJ_DELETE		EVILM1_06_C102_R0501
	_TALK_OBJ_END
	_END

