/********************************************************************/
SCRIPT_LABEL	ev_ruriri_02_p01_t107_r0201
	_TALK_OBJ_START

	//なつき度が低いので怒っているＳＥ(2)を使用(松宮さん承認)
	_VOICE_PLAY		MONSNO_RURIRI,2
	_TALK_KEYWAIT	msg_ruriri_02_p01_t107_r0201
	_VOICE_WAIT

	_TALK_KEYWAIT	msg_ruriri_02_p02_t107_r0201
	_TALK_OBJ_END
	_END



