//====================================================================
//
//		落下演出関連
//
//====================================================================

//---------------------------------------------------------------
//	崩れる床設定用呼び出し		SP_SCRIPT_LABEL
//---------------------------------------------------------------
SCRIPT_LABEL	sp_script_pitfall
SP_SCRIPT_DATA	WK_ICE_COUNT,0,ev_pitfall_script
SP_SCRIPT_END

//---------------------------------------------------------------
//	崩れる床設定用呼び出し		FLAG_CHANGE_LABEL
//---------------------------------------------------------------
SCRIPT_LABEL	ev_flag_pitfall
	_LDWK		WK_ICE_COUNT,1
	_END

//---------------------------------------------------------------
//	床が崩れて落ちるときのスクリプト
//---------------------------------------------------------------
SCRIPT_LABEL	ev_pitfall_script
	//会話モード＝すべてのOBJ静止
	_TALK_START

	_TIME_WAIT			20
	//自機が消えるアニメ
	_SET_OBJ_ANIME		EV_OBJ_SPID,_anm_pitfall
	_OBJ_ANIME_WAIT
	//落下音
	_SE					SE_RU_HYUU
	_TIME_WAIT			60

	//あらかじめ指定したマップに現在の座標で遷移
	_MAP_CHANGE_FALL	0xff,0xff
	_STOP_SCRIPT
	_END


//---------------------------------------------------------------
//	ＳＸＹ接続の落とし穴に落ちたときの演出
//---------------------------------------------------------------
SCRIPT_LABEL	ev_fall_script
	//会話モード＝すべてのOBJ静止
	_TALK_START

	_TIME_WAIT			20

	//自機が消えるアニメ
	_SET_OBJ_ANIME		EV_OBJ_SPID,_anm_pitfall
	_OBJ_ANIME_WAIT

	//落下するＳＥ
	_SE					SE_RU_HYUU
	_TIME_WAIT			60

	//マップ遷移呼び出し（遷移先はすでにセット済み）
	_PROGRAM			CHANGE_MAP_FALL
	_STOP_SCRIPT
	_END

//---------------------------------------------------------------
//	自機が消えるアニメ
//---------------------------------------------------------------
_anm_pitfall:
	.byte	AC_VANISH_ON
	.byte	ACMD_END


