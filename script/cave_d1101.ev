//====================================================================
//							cave_d1101
//						海底洞窟の海中入り口
//====================================================================

//--------------------------------------------------------------------
//					マップでの特殊イベント指定
//--------------------------------------------------------------------
EVENT_DATA_START cave_d1101_event_data
INIT_CTRL_LABEL		ev_init_cave_d1101
FLAG_CHANGE_LABEL	flag_change_cave_d1101
BG_CHANGE_LABEL		bg_change_cave_d1101
EVENT_DATA_END


//--------------------------------------------------------------------
//							FLAG_CHANGE_LABEL
//--------------------------------------------------------------------
flag_change_cave_d1101:
	//到着フラグセット
	_FLAG_SET		SYS_ARRIVE_SUBMARINECAVE

	_IF_FLAGON_JUMP	FE_POKE1_01_CAVE_D1111,submarine_vanish_obj_del_cave_d1101
	_END

//潜水艇用透明OBJを外す
submarine_vanish_obj_del_cave_d1101:
	_FLAG_SET		FV_SUBMARINE_06_CAVE_D1101
	_END


//--------------------------------------------------------------------
//							BG_CHANGE_LABEL
//--------------------------------------------------------------------
bg_change_cave_d1101:
	_IF_FLAGON_CALL	FE_POKE1_01_CAVE_D1111,bg_chg_01_cave_d1111
	_END

//潜水艇を消す
bg_chg_01_cave_d1111:
	_SET_CELL		5,3,542,1
	_SET_CELL		6,3,542,1
	_SET_CELL		7,3,542,1
	_SET_CELL		8,3,542,1

	_SET_CELL		5,4,552,0
	_SET_CELL		6,4,552,0
	_SET_CELL		7,4,552,0
	_SET_CELL		8,4,552,0

	_SET_CELL		5,5,552,0
	_SET_CELL		6,5,552,0
	_SET_CELL		7,5,552,0
	_SET_CELL		8,5,552,0
	_RET


//--------------------------------------------------------------------
//						INIT_CTRL_LABEL
//	※マップ初期化時に毎回呼ばれる
//--------------------------------------------------------------------
ev_init_cave_d1101:
	_SET_DIVING_MAP_ID	CAVE,CAVE_D1102,10,17
	_END


//--------------------------------------------------------------------
//						スクリプト本体
//--------------------------------------------------------------------

/********************************************************************/
//						潜水艇
/********************************************************************/
SCRIPT_LABEL	ev_submarine_06_p01_cave_d1101
	_TALK_START
	_TALK_KEYWAIT	msg_submarine_06_p01_cave_d1101
	_TALK_END
	_END


