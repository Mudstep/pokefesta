	.GLOBAL	talk_iai_tree
	.GLOBAL	pokelist_iai_tree

//---------------------------------------------------------------
//	話かけから
//---------------------------------------------------------------
talk_iai_tree:

	_TALK_START

	// バッジを持っていない
	_IF_FLAGOFF_JUMP	SYS_BATCH01_GET, iai_no_poke

	// 居合斬りを使えるポケモンがいるか
	_WAZA_CHECK	WAZANO_IAIGIRI
	_IFVAL_JUMP	ANSWORK, EQ, 6, iai_no_poke		//「いいえ」

	_SET_FE_WORK	0, ANSWORK

	_GET_NICKNAME	0, ANSWORK
	_GET_WAZANAME	1, WAZANO_IAIGIRI

	// 居合斬りを使うか
	_TALK_YES_NO	fe_iai_msg00
	_IFVAL_JUMP	ANSWORK, EQ, 0, talk_iai_end	//「いいえ」

	_TALK_KEYWAIT	fe_iai_msg01
	_TALK_CLOSE

	_SET_FLD_EFF	2

	_STOP_SCRIPT

	_JUMP	tree_obj_del

	_END

//---------------------------------------------------------------
//	ポケモンリストから
//---------------------------------------------------------------
pokelist_iai_tree:

	_TALK_START

	_SET_FLD_EFF	2

	_STOP_SCRIPT

	_JUMP	tree_obj_del

	_END

//---------------------------------------------------------------
//	木を消去
//---------------------------------------------------------------
tree_obj_del:

	_SET_OBJ_ANIME	TARGET_OBJ, iai_obj_anim
	_OBJ_ANIME_WAIT	

	_OBJ_DELETE		TARGET_OBJ

	_TALK_END

	_END

iai_obj_anim:
	.byte	AC_TREE_CUT
	.byte	ACMD_END

//---------------------------------------------------------------
//	居合斬りを使えるポケモンがいない
//---------------------------------------------------------------
iai_no_poke:
	_EASY_MSG	fe_iai_msg02
	_TALK_END
	_END

//---------------------------------------------------------------
//	終了
//---------------------------------------------------------------
talk_iai_end:
	_TALK_CLOSE
	_TALK_END
	_END
