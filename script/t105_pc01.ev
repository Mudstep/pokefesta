SCRIPT_LABEL	ev_oldman1_01_p01_t105_pc01
	_EASY_OBJ_MSG	msg_oldman1_01_p01_t105_pc01
	_END


/********************************************************************/
/*								マユミ								*/
/********************************************************************/
SCRIPT_LABEL	ev_woman1_02_p01_t105_pc01
	_TALK_OBJ_START

	_TALK_KEYWAIT	msg_woman1_02_p01_t105_pc01
	_TALK_CLOSE

	_SWITCH			RG_SITE
	_CASEJUMP		SITE_U,site_d_to_hero_t105_pc01			//下から話し掛け
	_CASEJUMP		SITE_L,site_r_to_hero_t105_pc01			//右から話し掛け
	_END

//下から話し掛け
site_d_to_hero_t105_pc01:
	_SET_OBJ_ANIME	WOMAN1_02_T105_PC01,woman1_02_t105_pc01_anime01
	_OBJ_ANIME_WAIT
	_JUMP			end_woman1_02_t105_pc01
	_END

//右から話し掛け
site_r_to_hero_t105_pc01:
	_SET_OBJ_ANIME	WOMAN1_02_T105_PC01,woman1_02_t105_pc01_anime02
	_OBJ_ANIME_WAIT
	_JUMP			end_woman1_02_t105_pc01
	_END

//共通終了処理
end_woman1_02_t105_pc01:
	_SE				SE_JIDO_DOA

	_OBJ_DELETE		WOMAN1_02_T105_PC01

	//マユミ宅にだす
	_FLAG_RESET		FV_MAYUMI_01_R114_R0201

	_TALK_OBJ_END
	_END

