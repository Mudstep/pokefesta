	_IF_TR_FLAGOFF_JUMP	FUTAGO_06,ev_newtown_01_girl
	_IF_TR_FLAGOFF_JUMP	MOUNT_08,ev_newtown_01_girl
	_IF_TR_FLAGOFF_JUMP	MOUNT_09,ev_newtown_01_girl

	//全てのトレーナー倒している
	_FLAG_SET		FE_GIRL1_FESTA
	_TALK_KEYWAIT	msg_girl1_01_p02_test_newtown

	_IF_FLAGON_JUMP	FE_BOY1_FESTA,clear_newtown_01

	_TALK_OBJ_END
	_END

//まだ全てのトレーナー倒していない
ev_newtown_01_girl:
	_TALK_KEYWAIT	msg_girl1_01_p01_test_newtown
	_TALK_OBJ_END
	_END

//フェスタクリア！
clear_newtown_01:
	_TALK_CLOSE
	_TIME_WAIT		60

	_FLD_FADE_BLACKOUT

	_TIME_WAIT		60

	//タイトル復帰処理
	_PROGRAM		SOFT_RESET
	_STOP_SCRIPT

	_TALK_OBJ_END
	_END


