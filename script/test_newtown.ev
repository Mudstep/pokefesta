//							少年
/********************************************************************/
SCRIPT_LABEL	ev_boy1_01_p01_test_newtown
	_TALK_OBJ_START

	_IF_TR_FLAGOFF_JUMP	PRINCESS_03,ev_newtown_01_boy
	_IF_TR_FLAGOFF_JUMP	PRINCESS_04,ev_newtown_01_boy
	_IF_TR_FLAGOFF_JUMP	FUTAGO_05,ev_newtown_01_boy
	_IF_TR_FLAGOFF_JUMP	FUTAGO_06,ev_newtown_01_boy
	_IF_TR_FLAGOFF_JUMP	MOUNT_08,ev_newtown_01_boy
	_IF_TR_FLAGOFF_JUMP	MOUNT_09,ev_newtown_01_boy

	//全てのトレーナー倒している
	_FLAG_SET		FE_BOY1_FESTA
	_TALK_KEYWAIT	msg_boy1_01_p02_test_newtown

	_IF_FLAGON_JUMP	FE_GIRL1_FESTA,clear_newtown_01

	_TALK_OBJ_END
	_END

//まだ全てのトレーナー倒していない
ev_newtown_01_boy:
	_TALK_KEYWAIT	msg_boy1_01_p01_test_newtown
	_TALK_OBJ_END
	_END


