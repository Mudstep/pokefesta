BEGIN{
	RS="{"			#レコード区切りを"{"にする	（通常は改行）
	FS="\n"			#フィールド区切りを改行にする	（通常はスペースorタブ）
	chk = 0
}


#=====================================================================
#
#=====================================================================
{
	if( $8 ~/MV_ON/ )
	{
		#---------------------------------------------------------------------
		#	X	Yどちらか	に０が入っているとまずい
		#---------------------------------------------------------------------
		if( $9 ~ "0x0" || $10 ~ "0x0" )
		{
			chk = 1
		}

	}else if( $8 ~ /MV_HON/ || $8 ~ /MV_RTL/ || $8 ~ /MV_RTR/ || $8 ~ /MV_HONR/ )
	{
		#---------------------------------------------------------------------
		#	X	に０が入っているとまずい
		#---------------------------------------------------------------------
		if( $9 ~ "0x0" )
		{
			chk = 1
		}

	}else if( $8 ~ /MV_VON/ || $8 ~ /MV_RTU/ || $8 ~ /MV_RTD/ || $8 ~ /MV_VOND/ )
	{
		#---------------------------------------------------------------------
		#	Y	に０が入っているとまずい
		#---------------------------------------------------------------------
		if( $10 ~ "0x0" )
		{
			chk = 1
		}

	}else if( $8 ~/MV_RT/ )
	{
		#---------------------------------------------------------------------
		#	X	Yどちらか	に０が入っているとまずい
		#	MV_RTU??など
		#---------------------------------------------------------------------
		if( $9 ~ "0x0" || $10 ~ "0x0" )
		{
			chk = 1
		}

	}

	if( chk == 1 )
	{
		print "warning"
		print "移動制限を直すようにして下さい！"
		print $2
		chk = 0
	}
}


