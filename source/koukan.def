// ==========================================
// イベント交換用データ構造体
// ==========================================
typedef struct{
	u8	nickname[11];	//ニックネーム
	u16	monsno;			//ポケモンの種類
	u8  rnds[6];		//乱数配列（ＨＰ・パワー・防御・すばやさ・特殊攻撃・特殊防御）
	u8  speabi;			//特性
	u32 id_no;			//ID
	u8	style;			//かっこよさ
	u8	beautiful;		//うつくしさ
	u8  cute;			//かわいさ
	u8	clever;			//かしこさ
	u8	strong;			//たくましさ
	u32	personal_rnd;	//個性乱数
	u16	item;			//持たせてるアイテム
	u8	mailno;			//メール番号
	u8	oyaname[11];	//親の名前
	u8  oyasex;			//親の性別
	u8	fur;			//毛艶
	u16 wantpoke;		//要求されるポケモン
}KOUKAN_POKEMON;

// ==========================================
// 簡略メール構造体
// ==========================================
typedef struct{
	u16 msg[MAIL_MSG_LEN];		//本文（簡易会話データ）
}KOUKAN_MAIL;


